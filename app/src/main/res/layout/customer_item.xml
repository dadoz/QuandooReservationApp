<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:padding="@dimen/margin_16">
    <ImageView
        android:id="@+id/avatarImageViewId"
        android:layout_width="@dimen/small_icon_width"
        android:layout_height="@dimen/small_icon_width"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_customer"/>
    <TextView
        android:id="@+id/firstNameTextViewId"
        android:layout_toRightOf="@id/avatarImageViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_16"
        android:text="first name"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/font_18"/>
    <TextView
        android:id="@+id/lastNameTextViewId"
        android:layout_toRightOf="@id/avatarImageViewId"
        android:layout_below="@id/firstNameTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_16"
        android:text="last name"
        android:textSize="@dimen/font_18"/>
    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/userIdTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_16"
        android:text="id"
        android:textSize="@dimen/font_14"/>
</RelativeLayout>